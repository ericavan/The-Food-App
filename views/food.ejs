<h1><%= message %></h1>

    <div>
        

        <form class="mx-auto" style="max-width: 350px; margin-top:2em;" action="/food_results" method="POST">
            <h3>Food Preferences</h3>


            <label for="locationDataList" class="form-label">Where would you like food recommendations?</label>
            <input class="form-control" list="datalistOptions" id="locationDataList" placeholder="Type to search...">
            <datalist id="datalistOptions">
            <option value="San Francisco">
            <option value="New York">
            <option value="Seattle">
            <option value="Los Angeles">
            <option value="Chicago">
            <option value="Washington DC">
            <option value="Boston">
            <option value="Detroit">
            <option value="No preference, I'll travel TO the best food">
            </datalist>     
    
    
    
            <div class="mb-3">
               <label class="form-check-label" for="my-select">Select your price range from the dropdown:</label>
               <select class="form-select" id="my-select" aria-label="Default select example">
                <option value="1" >$</option>
                <option value="2" selected>$$</option>
                <option value="3">$$$</option>
                <option value="4">$$$$</option>
              </select>
            </div>
    
            <button type="submit" class="btn btn-primary" id="my-button">Submit</button>
        </form>



    <script type="text/javascript">
        
        console.log("Erica thanks you for the page visit")
        var submitButton = document.getElementById("my-button")
        var locationInput = document.getElementById("locationDataList")
        var priceInput = document.getElementById("my-select")
        var restaurantCriteriaDisplay = document.getElementById("my-restaurant-criteria")
        var restaurantListDisplay = document.getElementById("restaurant-list")

        function handleSubmit() {
            //event.preventDefault()
            console.log("---------------------")
            console.log("YOU CLICKED ME!")
            console.log("LOCATION: ", locationInput.value)
            console.log("PRICE: ", priceInput.value)
            
            restaurantCriteriaDisplay.innerText=locationInput.value + " with price of " + priceInput.value
            //restaurantListDisplay.innerText=response.data.businesses[0].name
        }

        submitButton.addEventListener("click", handleSubmit)

    </script>

